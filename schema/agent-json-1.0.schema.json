{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://agentjson.org/schema/agent-json-1.0.schema.json",
  "title": "agent-json 1.0",
  "type": "object",
  "required": ["schema_version", "subject", "last_reviewed"],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0"
    },
    "subject": {
      "type": "object",
      "required": ["name", "domain"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "domain": { "type": "string", "minLength": 1 },
        "type": { "type": "string" },
        "urls": {
          "type": "object",
          "additionalProperties": { "type": "string", "format": "uri" }
        }
      },
      "additionalProperties": true
    },
    "facts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["key", "value"],
        "properties": {
          "key": { "type": "string", "minLength": 1 },
          "value": {},
          "notes": { "type": "string" },
          "evidence": {
            "type": "array",
            "items": { "type": "string", "format": "uri" }
          }
        },
        "additionalProperties": false
      }
    },
    "last_reviewed": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "expires": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "language": { "type": "string" },
    "contacts": {
      "type": "object",
      "additionalProperties": { "type": "string", "format": "email" }
    },
    "extensions": { "type": "object" }
  },
  "additionalProperties": true
}
